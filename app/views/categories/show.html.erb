<%= render template: 'layouts/tasks_header.html.erb' %>

<div class="d-flex justify-content-center mb-3">
  <%= link_to 'Add Task', new_category_task_path(@category), class: 'btn btn-success mr-2' %>
  <%= link_to "Due Today", category_tasks_path(@category, date: Date.today), class: 'btn btn-info ml-3' %>
</div>

<% if flash.any? %>
  <% flash.each do |key, value| %>
    <div class="alert alert-dismissible alert-<%= key.to_s %>">
      <a class="close" data-dismiss="alert" aria-label="close" href='#'>&times;</a> 
      <strong><%= value %></strong>
    </div>
  <% end %>
<% end %>

<%= render template: 'tasks/index.html.erb' %>

