<%= form_with method: :post, scope: :category, url: create_category_path, local: true do |f| %>
    <p>
      <% if @category.errors.any? %>
        <ul>
          <div class="alert alert-dismissible alert-danger">
            <% @category.errors.full_messages.each do |message| %>
              <li class= "text-danger list-unstyled">
                  <strong>ERROR: <%= message %></strong>
              </li>
            <% end %>
          </div> 
        </ul>
      <% end %>
    </p>
<% end %>

<div class="container masthead">
  <%= form_with method: :post, scope: :category, url: create_category_path, local: true do |f| %>
    <p>
      <%= link_to 'âœ–', categories_path, class: 'btn-sm close align-middle' %>
    </p>
    <br/>
    <legend class="text-center font-weight-bold color-green">
      NEW CATEGORY
    </legend>
    <br/>
