<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col"></th>
      <th scope="col">Task</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th></th>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
    <tbody>
      <tr>
        <div class="col-sm-10">
          <td scope="row">
            <%= link_to "View", category_task_path(@category.id, task.id), class: 'btn btn-primary ml-3' %>
          </td>
          <td class="font-weight-bold align-middle text-uppercase">
            <%= task.name %>
          </td>
          <td class="text-muted font-weight-light align-middle">
            <%= truncate(task.description) %>
          </td>
          <td class="text-muted font-weight-light align-middle">
            <%= task.date.strftime("%d-%^b-%Y, %A") %>
          </td>
        </div>
        <div class="col-sm-2">
          <td class=" d-flex justify-content-center">
            <%= link_to edit_category_task_path(@category.id, task.id), class: 'btn btn-warning pull-right' do %>
              <span>‚úè</span>
            <% end %> 
            <%= link_to category_task_path(@category.id, task.id), class: 'btn btn-danger pull-right', method: :delete, data: { confirm: 'Delete this TASK?' } do %>
              <span>üóë</span>
            <% end %>
          </td>
        </div>
      </tr>
    </tbody>
  <% end %>
</table>

