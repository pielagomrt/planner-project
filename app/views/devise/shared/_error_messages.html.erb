<p>
  <% if resource.errors.any? %>
    <ul>
      <div class="alert alert-dismissible alert-danger">
        <% resource.errors.full_messages.each do |message| %>
          <li class= "list-unstyled">
            <strong><%= message %></strong>
          </li>
        <% end %>
      </div> 
    </ul>
  <% end %>
</p>